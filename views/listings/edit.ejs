<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">

 
    <h3 class="mt-3">Edit your listing</h3>
    <form action="/listings/<%= listing._id %>?_method=put" method="post" novalidate class="needs-validation">
        <div class="mg-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter Title</div>
        </div>
        
        <div class="mg-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a short description.</div>
        </div>
        
        <div class="mg-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" value="<%= listing.image%>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid URL.</div>
        </div>
        <div class="row">
        <div class="mg-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control">
            <div class="invalid-feedback">Please enter price.</div>
        </div>
        
        <div class="mg-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter country name.</div>
        </div>
    </div>
        
        <div class="mg-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid location.</div>
        </div>
        
       <br><br>
        <button class="btn btn-dark edit-btn">Edit</button>
        <br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>